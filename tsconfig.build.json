{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
  },
  "include": ["lib"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
